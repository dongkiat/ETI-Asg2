<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="script" href="/js/bootstrap.min.js" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="styles.css" />

    <link rel="icon" type="image/x-icon" href="brutus-color.svg" />
    <title>EduFi</title>
  </head>

  <body>
    <div class="container h-100">
      <div
        class="d-flex flex-column align-items-center justify-content-center h-100"
      >
        <h1 class="title">EduFi</h1>
        <form action="/login" method="POST" class="mt-4 login-form">
          <input type="text" class="form-control shadow-none login-input <%=
          (error == "Invalid userID") ? "is-invalid" : "" %>" id="userID"
          name="userID" placeholder="user ID" aria-describedby="userIDFeedback"
          required />
          <!--  -->
          <% if (error == "Invalid userID") { %>
          <div id="userIDFeedback" class="invalid-feedback"><%= error %></div>
          <% } %>
          <!--  -->
          <input type="password" class="form-control shadow-none login-input
          mt-3 <%= (error == "Invalid password") ? "is-invalid" : "" %>"
          id="password" name="password" placeholder="password"
          aria-describedby="passwordFeedback" required />
          <!--  -->
          <% if (error == "Invalid password") { %>
          <div id="passwordFeedback" class="invalid-feedback"><%= error %></div>
          <% } %>

          <div class="btn-group mt-3 d-flex" role="group">
            <input
              type="radio"
              class="btn-check"
              name="usertype"
              id="student-account"
              value="student"
              autocomplete="off"
              checked
            />
            <label
              class="btn btn-outline-primary shadow-none login-user-toggle"
              for="student-account"
              >Student</label
            >
            <input
              type="radio"
              class="btn-check"
              name="usertype"
              id="tutor-account"
              value="tutor"
              autocomplete="off"
            />
            <label
              class="btn btn-outline-primary shadow-none login-user-toggle"
              for="tutor-account"
              >Tutor</label
            >
          </div>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary login-btn mt-4">
              Login
            </button>
          </div>
        </form>

        <% if (error == "System error") {%>
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
          <div
            id="errorToast"
            class="toast show"
            role="alert"
            aria-live="assertive"
            aria-atomic="true"
          >
            <div class="toast-header bg-danger text-white">
              <span class="me-auto"
                ><i class="bi bi-exclamation-circle"></i>
                <strong>Error</strong></span
              >
              <button
                type="button"
                id="toastbtn"
                class="btn-close btn-close-white"
                data-bs-dismiss="toast"
                aria-label="Close"
              ></button>
            </div>
            <div class="toast-body bg-danger text-white"><%= error %></div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <script>
      document.getElementById("toastbtn").onclick = function () {
        document.getElementById("errorToast").classList.remove("show");
      };
    </script>
  </body>
</html>
